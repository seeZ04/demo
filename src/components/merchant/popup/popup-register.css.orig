.popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    /* Dim background */
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10;
}

.popup {
    width: 60%;
    max-width: 896px;
    height: fit-content;
    margin: auto;
    border-radius: 24px 24px 24px 24px;
    z-index: 50;
    background: #FFFFFF;
    /*  position: absolute;*/
    display: flex;
    flex-direction: row;
    justify-content: space-between;

    position: fixed; 
    top: 50%; 
    left: 50%;
    transform: translate(-50%, -50%);
}

.popup-content {
    background: #fff;
    text-align: left;
    z-index: 10;
    gap: 16px;
    margin: 40px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.title {
    font-family: Quicksand;
    font-size: 24px;
    font-weight: 700;
    line-height: 36px;
    letter-spacing: -0.01em;
    text-align: left;
}

.title p {
    margin: 0;
}

.content-1 {
    font-family: Quicksand;
    font-size: 16px;
    font-weight: 500;
    line-height: 24px;
    text-align: left;
}

.popup-content button {
    width: 174px;
    height: 56px;
    padding: 17px 32px 17px 32px;
    border-radius: 8px 8px 8px 8px;
    border-color: #FFFFFF;
    background: #00A3E0;
    color: #FFFFFF;
    font-family: Quicksand;
    font-size: 16px;
    font-weight: 700;
    line-height: 24px;
    letter-spacing: -0.01em;
    text-align: center;
    bottom: 0px;
    box-shadow: none;
}

.popup-image {
    padding-left: 40px;
    padding-top: 40px;

}

